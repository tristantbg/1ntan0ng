webfont('SBP', 'SuisseBPIntlThin')

text()
	font-family SBP, Helevetica, Arial, sans-serif
	letter-spacing 0.05em

// Main font styles

::selection
	background alpha($secondary, 0.5)

::-moz-selection
	background alpha($secondary, 0.5)

body,html
	-webkit-text-size-adjust 100%

html
	font-size 16px
	+below($md)
		font-size 10px

body
	text()
	font-size $normal
	line-height 1.3
	// text-rendering optimizeLegibility
	font-smoothing()

p
	line-height inherit
	&:not(:last-child)
		margin-bottom 1em

.uppercase
	text-transform uppercase

.lowercase
	text-transform lowercase

.text-center
	text-align center
