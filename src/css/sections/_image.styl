section.section--image
	img
		display block
	+above($sm + 1)
		&:nth-child(even)
			.responsive-image
				img
					object-position top right
		.responsive-image
			position relative
			height 100vh
			min-height 500px
			width 100%
			.ph
				display none
			img
				display block
				width 100%
				height 100%
				object-fit contain
				object-position top left
				font-family 'object-fit: contain'
