#site-title
	padding ($padding - 0.2) $padding
	position fixed
	top 0
	left 0
	height 7.1rem
	z-index 100
	svg
		display block
		height 100%

header
	padding $padding
	position absolute
	top 0
	left 0
	width 100%
	height 7.1rem
	background $primary
	z-index 99
	& > *
		+above($md + 1)
			column(1/4)
			&:nth-child(2)
				column(1/4, $offset: 1/4)
		+below($md)
			column(1/3)
			&:nth-child(2)
				column(2/3, $offset: 1/3)
	#menu-categories
		a
			float left
			width 100%
			transition color 300ms ease
			&:not(.active)
				color $gray
	#project-credits
		& > *
			display block
			float left
			width 100%



