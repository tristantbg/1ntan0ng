[page-type=about], body.about
  #about
    display block
  header
    pointer-events none
    background transparent
    #site-title
      pointer-events auto
    & > *:not(#site-title)
      display none

#about-page, #about
  padding $padding
  span(1)
  .row > *
    +above($md + 1)
      column(1/4)
      &:nth-child(1)
        column(1/4, $offset: 1/4)
    +below($md)
      column(2/3, $offset: 1/3)
  a
    transition color 300ms ease
    &:hover
      color $gray
  #about-links
    & > a
      float left
      width 100%
      transition color 300ms ease
      &:hover
        color $gray
    & > div
      float left
      width 100%
  [event-target=about]
    cursor pointer
    position absolute
    top $padding
    right $padding
    width 1.6rem
    height 1.6rem
    svg
      display block
      width 100%
  +below($md)
    .row
      display flex
      flex-direction column
    #about-links
      order 1
      margin-bottom 1em
    #about-contact
      order 2
      margin-bottom 1em
    #about-text
      order 3

#about
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background $primary
  z-index 90
  overflow-y scroll
  -webkit-overflow-scrolling touch
